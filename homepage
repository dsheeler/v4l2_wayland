    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script> 
    <!-- CUSTOM SCRIPTS  -->
    <script type="text/javascript">

    

    $(document).ready(function(){
        $(this).scrollTop(0);
        setTimeout(function(){
          $('#status').fadeOut(); // will first fade out the loading animation 
          $('#preloader').delay(350).fadeOut('slow'); // will fade out the white DIV that covers the website. 
          $('body').delay(350).css({'overflow':'visible'});
        },3000);

        new WOW().init();

        $('#show-more').click(function(){
            $(this).hide();
            $('#whole-team').slideDown();
            return false;
        });

        $('#close-more').click(function(){
            $('#whole-team').slideUp(function(){
                $('#show-more').show();
            });
            return false;
        });

        $('.mobile_nav').click(function(){
            $('.menu_bar').toggleClass('open');
            $('.mobile_nav').toggleClass('open');
        });
        
        $('.social-toggle-icon').click(function(){
            $('.social-box').toggleClass('open');
            $('.social-toggle-icon').toggleClass('open');
        });
        
        $("#videoModal").on('hidden.bs.modal', function (e) {
            $("#videoModal iframe").attr("src", $("#videoModal iframe").attr("src"));
        });

        $("#videoModal2").on('hidden.bs.modal', function (e) {
            $("#videoModal2 iframe").attr("src", $("#videoModal2 iframe").attr("src"));
        });

        $('#ci-box').click(function(){
            $('.ci-icon').toggle();
            $('.ci-cross').toggle();
            $('.update-box').slideToggle();
            return false;
        });

        $('#ci-box-2').click(function(){
            $('#ci-box-2 .ci-icon').toggle();
            $('#ci-box-2 .ci-cross').toggle();
            $('.upbox-2').slideToggle();
            return false;
        });

        $('#form_1').submit(function(){
            var name  = $('#name_1').val();
            var email = $('#email_1').val();
            $.post('hubspot.php',{name:name, email:email,submit:'1'}, function(data){
                if(data == 200){
                    $('.sucess-msg').hide();
                    $('.sucess-msg').html('<p>Thank you for joining HeartChain.</p>').addClass('success').fadeIn(1000);
                    $('#name').val('');
                    $('#email').val('');
                }else if(data == 409){
                    alert('You have been already subscribed.');
                    $('#name').val('');
                    $('#email').val('');
                }else{
                    alert('We are facing server problems.');
                    $('#name').val('');
                    $('#email').val('');
                }
            });
            return false;
        });

        $('#form_2').submit(function(){
            var name  = $('#name_2').val();
            var email = $('#email_2').val();
            var message = $('#message_2').val();
            $.post('hubspot_message.php',{name:name, email:email, message:message, submit:'1'}, function(data){
                if(data == 200){
                    $('.sucess-msg').hide();
                    $('.sucess-msg').html('<p>Thank you for joining HeartChain.</p>').addClass('success').fadeIn(1000);
                    $('#name').val('');
                    $('#email').val('');
                }else if(data == 409){
                    alert('You have been already subscribed.');
                    $('#name').val('');
                    $('#email').val('');
                }else{
                    alert('We are facing server problems.');
                    $('#name').val('');
                    $('#email').val('');
                }
            });
            return false;
        });

        $('#form_3').submit(function(){
            var name  = $('#name_3').val();
            var email = $('#email_3').val();
            $.post('hubspot.php',{name:name, email:email,submit:'1'}, function(data){
                if(data == 200){
                    $('.sucess-msg').hide();
                    $('.sucess-msg').html('<p>Thank you for joining HeartChain.</p>').addClass('success').fadeIn(1000);
                    $('#name').val('');
                    $('#email').val('');
                }else if(data == 409){
                    alert('You have been already subscribed.');
                    $('#name').val('');
                    $('#email').val('');
                }else{
                    alert('We are facing server problems.');
                    $('#name').val('');
                    $('#email').val('');
                }
            });
            return false;
        });


        $(document).on("scroll", onScroll);


         function onScroll(event){
            var scrollPos = $(document).scrollTop();
            $('.menu_bar a').each(function () {
                var currLink = $(this);
                var refElement = $(currLink.attr("href"));
                if (refElement.position().top <= scrollPos && refElement.position().top + refElement.height() > scrollPos) {
                    $('.menu_bar a').removeClass("active");
                    currLink.addClass("active");
                }
                else{
                    currLink.removeClass("active");
                }
            });
        }

         //smoothscroll
        $('.menu_bar a,.logo a,.main_menu_bar a,.desk-logo a').on('click', function (e) {
            e.preventDefault();
            $(document).off("scroll");
            $('.menu_bar').removeClass('open');
            $('.mobile_nav').removeClass('open');
            $('.social-toggle-icon').removeClass('open');
            $('.social-box').removeClass('open');
            $('.wp-link').removeClass('open');
            $('.ci-icon').show();
            $('.ci-cross').hide();
            $('.update-box').slideUp();
            $('a').each(function () {
                $(this).removeClass('active');
            })
            $(this).addClass('active');
          
            var target = this.hash,
                menu = target;
            $target = $(target).find('.target_head');
            $('html, body').stop().animate({
                'scrollTop': $target.offset().top+20
            }, 500, 'swing', function () {
                window.location.hash = target;
                $(document).on("scroll", onScroll);
            });
            return false;
        });

      

        var stickyNavTop = $('.header').offset().top;

        var stickyNav = function(){
        var scrollTop = $(window).scrollTop();

        if (scrollTop > stickyNavTop + 100) { 
              $('.header').addClass('scroll');
              $('.header').removeClass('bg_new'); 
            } else {
              $('.header').removeClass('scroll'); 
              $('.header').removeClass('bg_new'); 
            }
          };

          stickyNav();

          $(window).scroll(function() {
            stickyNav();
          });



          // extension:
    $.fn.scrollEnd = function(callback, timeout) {          
      $(this).scroll(function(){
        var $this = $(this);
        if ($this.data('scrollTimeout')) {
          clearTimeout($this.data('scrollTimeout'));
        }
        $this.data('scrollTimeout', setTimeout(callback,timeout));
      });
    };

    // how to call it (with a 1000ms timeout):
    $(window).scrollEnd(function(){
        var scrollTop = $(window).scrollTop();
        if (scrollTop > stickyNavTop + 100) { 
             $('.header').removeClass('scroll'); 
             $('.header').addClass('bg_new');  
            } 
        
    }, 1500);
    });
    </script>
    <script src="js/bootstrap.js"></script>
    <script src="js/script.js"></script>
